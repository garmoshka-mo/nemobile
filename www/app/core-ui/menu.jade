.no-select
    ul.off-canvas-list
        li(ng-hide='ALT_UI')
            a.menu-item(ng-click="goto('random')")
                i.fa.fa-refresh
                | {{ 'menu.random' | translate }}
        li
            a.menu-item(ng-click="goto('sendSecret')")
                i.fa.fa-lock
                | {{ 'menu.secret' | translate }}
        li
            a.menu-item(ng-click="goto('pubsList')")
                i.fa.fa-thumbs-o-up
                | {{ 'menu.pub' | translate }}
        li(ng-show='fullMode')
            a.menu-item(ng-click="goto('chats')")
                i.fa.fa-envelope
                | Чаты
                span.menu-new-messages-number(ng-show='!!user.unreadChatsAmount', ng-bind='user.unreadChatsAmount')
        li(ng-show='fullMode')
            a.menu-item(ng-click="goto('friends')")
                i.fa.fa-group
                | Контакты
        li(ng-show='fullMode')
            a.menu-item(ng-click="goto('friendSearch')")
                i.fa.fa-plus
                | Добавить контакт
        li(ng-show='fullMode')
            a.menu-item(ng-click="goto('settings')")
                i.fa.fa-gear
                | Настройки
        li(ng-show="isRussianLang() && !ALT_UI && !deviceInfo.isIos")
            a.menu-item.pointer(ng-click="openExternalURL('https://vk.com/dub_ink')")
                i.fa.fa-vk
                | {{ 'menu.vk' | translate }}
        li(ng-show="!ALT_UI && (!isRussianLang() || deviceInfo.isIos)")
            a.menu-item.pointer(ng-click="openExternalURL('https://www.facebook.com/groups/901153223303892')")
                i.fa.fa-facebook
                | {{ 'menu.facebook' | translate }}
        li
            a.menu-item(ng-click="goto('about')")
                i.fa.fa-info-circle
                | {{ 'menu.about' | translate }}
        li(ng-show='fullMode || debug')
            a.menu-item(ng-click="goto('exit')")
                i.fa.fa-power-off
                | Выход
        li(ng-hide='IS_APP')
            a.menu-item(ng-click="goto('mobileApp')")
                i.fa.fa-mobile.mobile-icon
                | {{ 'menu.mobileApp' | translate }}
        li
            a.menu-item(ng-click='sendDebugInfo()', ng-show='debug')
                i.fa.fa-life-ring
                | отправить слепок
            div(spinner='', spinner-color='white', ng-show='showDebugPreloader')
        li(ng-hide='ALT_UI')
            a.menu-item.delay-close-menu(ng-click='toggleSound()')
                i.fa(ng-class="soundEnabled ? 'fa-volume-up' : 'fa-volume-off'")
                | {{ 'menu.sound' | translate }}
