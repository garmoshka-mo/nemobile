.row.pub
    .ta-center.top-margin
        .pubs-title(ng-show='posts.items.length > 0')
            div(translate='pubs.title')
            //div.small-description(translate='pubs.description')
            //div
                img(src='assets/img/page-break.png')
    .separator
        
    // div#add-link(ng-show='debug')
        input(type='text' ng-model='url', placeholder="{{ 'pubs.urlPlaceholder' | translate }}")
        span {{ postUrlNotice | translate }}
        button(ng-click='postUrl()' ng-disabled='publishing' translate='pubs.addUrl')

    ul.posts-list(infinite-scroll-disabled='posts.disableAutoload',
        infinite-scroll='loadSaved() || loadMore()', infinite-scroll-distance='1',
        infinite-scroll-container='".main-section"')
        li(ng-repeat='post in posts.items')
            post(model="post")
                .tweet.original-tweet.has-cards
                    .context
                    .content
                        .stream-item-header
                            a.account-group
                                img.avatar(ng-src='{{ ::post.user.profile_image_url }}', alt='')
                                strong.fullname {{::post.user.name}} &nbsp;
                                span.username
                                    span(ng-click='post.user.show_screen_name=!post.user.show_screen_name') @
                                    span(ng-show='post.user.show_screen_name') {{::post.user.screen_name}}
                        //TODO: emoji in tweets are in utf ...
                        //p(ng-bind-html='::post.text | emoji')
                        p.text(ng-bind-html='::post.text')
                        .controls
                            a(href='#')
                                i.fa.fa-mail-reply &nbsp;
                                span.u-hiddenVisually Ответить
    spinner.top-margin(ng-show='loading', spinner-color='green')
