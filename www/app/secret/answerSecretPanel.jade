.input-panel(ng-controller='answerSecretPanelController')
    #footer(ng-show='s.validUser')
        .wrapper
            #alert(ng-model='errorDescription', alert-box='')
        .background
            .wrapper
                .chat-left-buttons(ng-class="{'chat-left-buttons-oldandroid': deviceInfo.isOldAndroid || deviceInfo.isIos}")
                    .chat-input-container
                        div.chat-input.single-line(contenteditable="true",
                        ng-focus='onInputFieldFocus()',
                        ng-keydown='input_keypress($event)',
                        data-snap-ignore='true', tabindex="0")
                button.chat-send.ng-animate-disabled(ng-click='sendMessage()', ng-show='!(deviceInfo.isOldAndroid || deviceInfo.isIos)')
                    i.fa.fa-paper-plane(ng-show='!isMessageSending')
                    span(ng-show='isMessageSending', spinner='', spinner-color='white')